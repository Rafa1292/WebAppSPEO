@model IEnumerable<WebApplication1.Models.Distrit>

@{
    ViewBag.Title = "Index";
}

    <div class=" p-4">

        <div class="justify-content-center d-flex">
            <h3 class="url-label">Distritos</h3>
        </div>

        <div class="d-flex mb-2">
            @Html.ActionLink("Agregar", "Create", null, new { @class = "btn btn-outline-primary" })
        </div>
        <hr />


        <div class="container row d-flex text-center">
            <div class="col-md-4 ">
                <strong>
                    Distrito
                </strong>
            </div>
            <div class="col-md-4 ">
                <strong>
                    Canton
                </strong>
            </div>
        </div>
        <hr />



        @foreach (var item in Model)
        {
            <div class="container row d-flex mb-3 text-center">
                <div class="col-md-4 ">
                    @Html.DisplayFor(modelItem => item.Name)
                </div>
                <div class="col-md-4">
                    @Html.DisplayFor(modelItem => item.Canton.Name)
                </div>
                <div class="col-md-4 justify-content-center d-flex">
                    @Html.ActionLink("Editar", "Edit", new { id = item.DistritId }, new { @class = "btn btn-outline-info" })
                    @Html.ActionLink("Borrar", "Delete", new { id = item.DistritId }, new { @class = "btn btn-outline-danger delete-button" })
                </div>
            </div>
        }

</div>