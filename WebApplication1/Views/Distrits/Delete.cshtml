@model WebApplication1.Models.Distrit

@{
    ViewBag.Title = "Delete";
}
<div class=" p-4">

    <div class="justify-content-center d-flex">
        <h3 class="url-label">Distritos</h3>
    </div>

    <div>
        <hr />
        <div class="justify-content-center d-flex ">
            <div>
                <h5>
                    Si eliminas este distrito no sera posible recuperarlo.
                </h5>
            </div>
        </div>
        <hr />

        <div class="justify-content-center d-flex text-center">
            <dl class="dl-horizontal">
                <dt>
                    Canton
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Canton.Name)
                </dd>

                <dt>
                    Distrito
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Name)
                </dd>
            </dl>
        </div>

        <div class="justify-content-center d-flex">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input type="submit" value="Borrar" class="btn btn-danger" />
                    <a href="/Distrits" class="btn btn-outline-secondary">Regresar</a>
                </div>
            }
        </div>
    </div>
</div>