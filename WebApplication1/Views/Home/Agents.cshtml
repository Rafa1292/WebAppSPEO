@model WebApplication1.Models.LandingView


<div class="col-12  text-center mb-3 d-flex flex-wrap justify-content-center align-items-center ">
    <h2 class="index-items-title text-dark m-4 col-12">
        Nuestros agentes
    </h2>
    <p class="agents-description">
        La meta de cualquiera de nuestros asesores siempre será conseguir la propiedad que usted necesita, al precio más cómodo del mercado y con la asesoría y respaldo que nos caracteriza.
    </p>
</div>

@{ 
            var i = 1;

}

<div class="container-fluid p-3 d-flex flex-wrap  ">

    @foreach (var item in Model.IndividualContributors)
    {
        var imgSrc = String.Format("data:image/png;base64,{0}", Convert.ToBase64String(item.PictureArray));

    <div class="col-md-4 d-flex flex-wrap ic ic-@i">
        <div class="col-md-12 ic-shadow" >

        </div>
        <div class="col-md-12 p-0 d-flex justify-content-center ic-picture-container mb-5">
            <div class="rounded-circle ic-picture-img">
                <img src="@imgSrc" alt="Alternate Text" style="width: inherit; height: inherit;"/>
            </div>
        </div>


        <div class="container flex-wrap d-flex justify-content-center text-center p-2 ic-info-container">

            <div class="col-md-12 p-2 d-flex justify-content-center">
                <h4>
                    <strong class="">
                        @item.Name
                    </strong>
                </h4>
            </div>

            <div class="col-md-12 p-2 d-flex justify-content-center">
                <h5>
                    <strong class="index-item-price">
                        @item.PhoneNumber
                    </strong>
                </h5>
            </div>

            <div class="col-md-12 p-2 d-flex justify-content-center ic-mail">
                <p>
                    @item.Mail
                </p>
            </div>
        </div>
    </div>

        if (i == 3)
        {
            i = 1;
        }
                i++;

    }

</div>