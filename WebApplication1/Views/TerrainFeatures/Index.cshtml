@model IEnumerable<WebApplication1.Models.TerrainFeature>

@{
    ViewBag.Title = "Index";
}

<div class="justify-content-center d-flex">
    <h3 class="url-label">Caracteristicas de terreno</h3>
</div>

<div class="d-flex mb-2">
    @Html.ActionLink("Agregar", "Create", null, new { @class = "btn btn-outline-primary" })
</div>
<hr />

<div class="container row d-flex text-center">
    <div class="col-md-6 ">
        <strong>
            @Html.DisplayNameFor(model => model.Description)
        </strong>
    </div>
</div>
<hr />


    @foreach (var item in Model)
    {
        <div class="container row d-flex mb-3 text-center">
            <div class="col-md-6">
                @Html.DisplayFor(modelItem => item.Description)
            </div>
            <div class="col-md-6 justify-content-center d-flex">
                @Html.ActionLink("Editar", "Edit", new { id = item.TerrainFeatureId }, new { @class = "btn btn-outline-info" })
                @Html.ActionLink("Borrar", "Delete", new { id = item.TerrainFeatureId }, new { @class = "btn btn-outline-danger delete-button" })
            </div>
        </div>
        <hr />
    }

