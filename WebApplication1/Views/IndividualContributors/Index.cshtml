@model IEnumerable<WebApplication1.Models.IndividualContributor>

@{
    ViewBag.Title = "Index";
}

<div class="p-4">
    <div class="justify-content-center d-flex">
        <h3 class="url-label">Colaboradores</h3>
    </div>

    <div class="d-flex mb-2">
        @Html.ActionLink("Agregar", "Create", null, new { @class = "btn btn-outline-primary" })
    </div>
    <hr />



    @foreach (var item in Model)
    {
        <div class="container d-flex flex-wrap mb-3 p-2 text-center justify-content-center ">

            <div class="col-md-2 ">
                @{
                    var base64 = Convert.ToBase64String(item.PictureArray);
                    var imgSrc = String.Format("data:image/png;base64,{0}", base64);

                    <img class="rounded-circle" src="@imgSrc" style="width:90px; height: 90px;">
                }

            </div>
            <div class="col-md-2 icAlignStyle">
                @Html.DisplayFor(modelItem => item.Name)
            </div>
            <div class="col-md-2 icAlignStyle">
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </div>
            <div class="col-md-3 icAlignStyle text-break">
                @Html.DisplayFor(modelItem => item.Mail)
            </div>
            <div class="col-md-3 icAlignStyle justify-content-center d-flex ">
                @Html.ActionLink("Editar", "Edit", new { id = item.IndividualContributorId }, new { @class = "btn btn-outline-info" })
                @Html.ActionLink("Borrar", "Delete", new { id = item.IndividualContributorId }, new { @class = "btn btn-outline-danger delete-button" })

            </div>
        </div>
        <hr />
    }

</div>