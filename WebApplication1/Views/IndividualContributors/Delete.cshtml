@model WebApplication1.Models.IndividualContributor

@{
    ViewBag.Title = "Delete";
}

<div class="justify-content-center d-flex">
    <h3 class="url-label">Colaboradores</h3>
</div>

<div>
    <hr />
    <div class="justify-content-center d-flex ">
        <div>
            <h5>
                Si eliminas este colaborador no sera posible recuperarlo.
            </h5>
        </div>
    </div>
    <hr />

    <div class="justify-content-center d-flex text-center">
        <div class="col-md-2">
            <strong>
                Foto
            </strong>
        </div>
        <div class="col-md-2">
            <strong>
                @Html.DisplayNameFor(model => model.Name)
            </strong>
        </div>
        <div class="col-md-2">
            <strong>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </strong>
        </div>
        <div class="col-md-2">
            <strong>
                @Html.DisplayNameFor(model => model.Identification)
            </strong>
        </div>
        <div class="col-md-2">
            <strong>
                @Html.DisplayNameFor(model => model.Mail)
            </strong>
        </div>
    </div>
    <hr />

    <div class="justify-content-center d-flex text-center">
        <div class="col-md-2 ">
            @{
                var base64 = Convert.ToBase64String(Model.PictureArray);
                var imgSrc = String.Format("data:image/png;base64,{0}", base64);

                <img src="@imgSrc" style="width:90px; height: 90px;">
            }

        </div>
        <div class="col-md-2 icAlignStyle">
            @Html.DisplayFor(modelItem => Model.Name)
        </div>
        <div class="col-md-2 icAlignStyle">
            @Html.DisplayFor(modelItem => Model.PhoneNumber)
        </div>
        <div class="col-md-2 icAlignStyle">
            @Html.DisplayFor(modelItem => Model.Identification)
        </div>
        <div class="col-md-2 icAlignStyle">
            @Html.DisplayFor(modelItem => Model.Mail)
        </div>
    </div>

    <hr />
    <div class="justify-content-center d-flex text-center">

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Borrar" class="btn btn-danger" />
                <a href="/IndividualContributors" class="btn btn-outline-secondary">Regresar</a>
            </div>
        }
    </div>
</div>
