@model IEnumerable<WebApplication1.ViewModel.UserView>
@{
    ViewBag.Title = "Index";
}

<div class="container p-4">


    <div class="justify-content-center d-flex">
        <h3 class="url-label">Administrador de Roles</h3>
    </div>

    <div class="container row d-flex text-center">
        <div class="col-md-3 ">
            <strong>
                @Html.DisplayNameFor(model => model.Name)
            </strong>
        </div>
        <div class="col-md-3">
            <strong>
                @Html.DisplayNameFor(model => model.Email)
            </strong>
        </div>
    </div>
    <hr />



    @foreach (var item in Model)
    {

        <div class="container row d-flex mb-3  text-center">
            <div class="col-md-3 ">
                @Html.DisplayFor(modelItem => item.Name)
            </div>
            <div class="col-md-3 ">
                @Html.DisplayFor(modelItem => item.Email)
            </div>
            <div class="col-md-3 ">
                @Html.ActionLink("Roles", "Roles", new { userId = item.UserID }, new { @class = "btn btn-outline-info" })
                @Html.ActionLink("Borrar", "Delete", new { id = item.UserID }, new { @class = "btn btn-outline-danger delete-button" })
            </div>
        </div>
    }
</div>


