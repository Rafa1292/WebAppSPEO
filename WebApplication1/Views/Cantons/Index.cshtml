@model IEnumerable<WebApplication1.Models.Canton>

@{
    ViewBag.Title = "Index";
}

<div class="justify-content-center d-flex">
    <h3 class="url-label">Cantones</h3>
</div>

<div class="d-flex mb-2">
    @Html.ActionLink("Agregar", "Create", null, new { @class = "btn btn-outline-primary" })
</div>
<hr />



@foreach (var item in Model)
{
    <div class="container row d-flex mb-3">
        <div class="col-md-6">
            @Html.DisplayFor(modelItem => item.Name)
        </div>
        <div class="col-md-6 justify-content-end d-flex">
            @Html.ActionLink("Edit", "Edit", new { id = item.CantonId }, new { @class = "btn btn-outline-info" })
            @Html.ActionLink("Delete", "Delete", new { id = item.CantonId }, new { @class = "btn btn-outline-danger delete-button" })
        </div>
    </div>
    <hr />
}

