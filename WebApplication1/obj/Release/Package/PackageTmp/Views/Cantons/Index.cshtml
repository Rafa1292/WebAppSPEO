@model IEnumerable<WebApplication1.Models.Canton>

@{
    ViewBag.Title = "Index";
}
<div class=" p-4">

    <div class="justify-content-center d-flex">
        <h3 class="url-label">Cantones</h3>
    </div>

    <div class="d-flex mb-2">
        @Html.ActionLink("Agregar", "Create", null, new { @class = "btn btn-outline-primary" })
    </div>
    <hr />

    <div class="container row d-flex text-center">
        <div class="col-md-6 m-2">
            <strong>
                Canton
            </strong>
        </div>
    </div>
    <hr />


    @foreach (var item in Model)
    {
        <div class="container row d-flex mb-3 text-center">
            <div class="col-md-6 mb-3">
                @Html.DisplayFor(modelItem => item.Name)
            </div>
            <div class="col-md-6 justify-content-center d-flex">
                @Html.ActionLink("Editar", "Edit", new { id = item.CantonId }, new { @class = "btn btn-outline-info" })
                @Html.ActionLink("Borrar", "Delete", new { id = item.CantonId }, new { @class = "btn btn-outline-danger delete-button" })
            </div>
        </div>
        <hr />
    }

</div>