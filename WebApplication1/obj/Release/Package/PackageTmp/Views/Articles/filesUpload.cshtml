
@{
    ViewBag.Title = "filesUpload";
}

<h2>filesUpload</h2>

@using (Html.BeginForm("filesUpload", "Articles", null,
            FormMethod.Post,
            new { enctype = "multipart/form-data", method = "post" }))
{
    @Html.AntiForgeryToken()




    <div class="col-md-12 shadow  p-0 flex-wrap d-flex mb-3" name="filesFormBody">
        <div class="col-md-2 mb-3 mt-3">
            <label for="file" class="btn btn-success">
                Seleccionar archivos
            </label>
            <input type="file" name="file" multiple class="d-none" id="file" onchange="showPreviewFiles(event)" />
        </div>
        <div class="col-md-10 mt-3 mb-3" id="FilesName">

        </div>
    </div>

    <div class="col-md-12 ">
        <hr />
        <div class="form-group">

            <div class="container-fluid row">
                <div class="col-md-6 d-flex justify-content-end">
                    <input type="submit" value="Crear" class="btn btn-success" id="houseFormButton" />
                </div>
                <div class="col-md-6">
                    <a href="/Articles" class="btn btn-outline-secondary">Regresar</a>
                </div>
            </div>
        </div>
    </div>
}

<script>
    function showPreviewFiles(event) {

        var input = event.target;

        for (var i = 0; i < input.files.length; i++) {
            var thumbnail_id = input.files[i].name;
            var node = document.createElement("Label");
            node.classList.add("p-2", "border", "border-secondary", "mx-2", "rounded")
            node.textContent = thumbnail_id;
            var element = document.getElementById("FilesName")
            element.appendChild(node);
        }
    }
</script>
